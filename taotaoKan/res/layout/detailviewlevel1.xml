<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:id="@+id/detailviewlevel1_imageview" android:layout_gravity="center"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailviewlevel1_relateLayout1"
                    android:orientation="horizontal" android:clickable="true">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:text="item introduction"
            android:id="@+id/detailviewlevel1_description"/>

    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailviewlevel1_relateLayout2"
                    android:orientation="horizontal">
    <TextView
            android:layout_width="241dp"
            android:layout_height="41dp"
            android:text="free post"
            android:id="@+id/detailviewlevel1_postfree" android:layout_gravity="center"/>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailviewlevel1_relateLayout3"
                    android:orientation="horizontal">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:text="New Text"
            android:id="@+id/detailviewlevel1_item_sourceType"/>
    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="30days"
            android:id="@+id/detailviewlevel1_30day_sellamount" android:layout_gravity="center"/>
    </RelativeLayout>

</LinearLayout>